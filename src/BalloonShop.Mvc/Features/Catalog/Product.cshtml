@model Product
@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a href="/">Balloon Shop</a> <span class="divider">/</span></li>
            <li><a href="/Department/Show/@ViewBag.Category.Department.Id">@ViewBag.Category.Department.Name</a> <span class="divider">/</span></li>
            <li><a href="/Category/Show/@ViewBag.Category.Id">@ViewBag.Category.Name</a> <span class="divider">/</span></li>
            <li class="active">@Model.Name</li>
        </ul>
    </div>
</div>

<div class="row">

    <div class="col-sm-6 col-md-6" style="text-align: center;">
        <a href="/Content/ProductImages/@Model.Image" class="fancybox">
            <img src="/Content/ProductImages/@Model.Image" class="product-image" /></a>
    </div>

    <div class="col-sm-6 col-md-6">
        <h1>@Model.Name</h1>

    </div>

    <div class="col-sm-6 col-md-6">
        <p>@Model.Description</p>
    </div>

    <div class="col-sm-6 col-md-6">
        <h3><strong>Price: @Model.Price.ToString("c")</strong></h3>
    </div>

    <div class="col-sm-6 col-md-6">
        <div class="form-actions">
            <div class="row">
                <div class="col-xs-5 col-sm-5 col-md-5">
                <div class="row">
                <form method="post" action="/Cart/Add" class="">
                	<input type="hidden" name="returnUrl" value="@CatalogUrlHelper.ProductUrl(Html, Model)" />
                    <input type="hidden" name="balloonId" value="@Model.Id" />
                    <div class="col-xs-5">
                    	<input type="text" name="quantity" class="form-control spinner" placeholder="1" />
                    </div>
                    <button type="submit" class="btn btn-success">Add to Cart <span class="icon-shopping-cart icon-white"></span></button>
                </form>
                </div>
                </div>
                <div class="col-xs-2 col-sm-2 col-md-2" style="text-align: center;">
                    OR
                </div>
                <div class="col-xs-5 col-sm-5 col-md-5">
                    <a href="#">Add to wish list</a>
                </div>
            </div>
        </div>
        <br />
    </div>

    <div class="col-sm-6 col-md-6">

    	<div class="row">

    		<div class="col-xs-6 col-sm-4 col-md-4">
    		<div class="rating" data-url="/Product/Rate/@Model.Id" data-curvalue="0"></div>
    		</div>
    		<div class="col-xs-6 col-sm-6 col-md-6">
    		<a href="#reviews" class="reviews">@((ViewBag.Reviews as IEnumerable<ProductReview>).Count()) reviews</a> | <a href="#reviews" class="reviews">Write a review</a>
    		</div>

    	</div>

    </div>

</div>

<div class="row">
    <div class="col-md-12">
    	<br />

        <ul class="nav nav-tabs">
            <!--<li class="active"><a href="#description" data-toggle="tab">Description</a></li>-->
            <li class="active"><a href="#reviews" data-toggle="tab">Reviews (@((ViewBag.Reviews as IEnumerable<ProductReview>).Count()))</a></li>
            <li><a href="#related-products" data-toggle="tab">Related products</a></li>
        </ul>

        <div class="tab-content">
            <!--
            <div class="tab-pane active" id="description">
                @Model.Description
            </div>
            -->
            <div class="tab-pane active" id="reviews">
                @if (!(ViewBag.Reviews as IEnumerable<ProductReview>).Any())
                {
                    <span>There are no reviews for this product.</span>
                }
                <ul class="unstyled">
                    @foreach (var review in ViewBag.Reviews)
                    {
                        <li>
                            <strong>@review.Name - @review.CreatedDate</strong><br />@review.Review
                        </li>
                    }
                </ul>
                <br />
                <form class="form-horizontal">
                    <fieldset>
                        <legend></legend>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name:</label>
                            <div class="col-sm-10">
                            	<input type="text" class="form-control" />
                        	</div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Review</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" rows="10"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                        	<div class="col-sm-offset-2 col-sm-10">
                            	<input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>

            <div class="tab-pane" id="related-products">
                <ul class="thumbnails row-fluid">
                    @foreach (var recomendation in ViewBag.Recomendations)
                    {
                        <li class="col-md-4" style="height: 160px;">
                            <div class="thumbnail">
                                <a href="/Balloon/Show/@recomendation.Id" title="@recomendation.Name">
                                    <img src="/Content/ProductImages/@recomendation.Thumb" class="product-image" /></a>
                                <div class="caption">
                                    <a href="/Balloon/Show/@recomendation.Id" title="@recomendation.Name" class="shortentext">@recomendation.Name</a><br />
                                    Price: @recomendation.Price.ToString("c")
                                </div>
                            </div>
                        </li>    
                    }
                </ul>
            </div>
        </div>

    </div>
</div>

@section Script {
    <script>
        $(function () {
            $('.reviews').click(function () {
                $('.nav-tabs a[href="#reviews"]').tab('show');
            });
        });
    </script>
}