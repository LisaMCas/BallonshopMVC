@model System.Collections.Generic.IEnumerable<BalloonShop.Model.ShoppingCart>
<div class="CartSummary">
    @if (Model.Any())
    { 
        <h4 style="font-size:10pt; margin:0px; text-align:center;">Cart summary <a href="@Url.Action("Index", "Cart")" class="CartLink">(view details)</a></h4>
        <ul class="unstyled">
            @foreach (var item in Model)
            {
                <li>@item.Quantity x <a href="@Url.Action("Show", "Balloon", new { id = item.Balloon.Id })">@item.Balloon.Name</a> @((item.Balloon.Price * item.Quantity).ToString("c"))</li>
            }
        </ul>
        <hr style="margin-bottom:0px;" />
        <span>Total: <span class="ProductPrice">@ViewBag.Total.ToString("c")</span></span>
    }
    else
    { 
        <strong>Your shopping cart is empty.</strong>
    }
</div>

