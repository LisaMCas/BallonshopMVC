@model Department
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Navigation {

    @{Html.RenderAction("Navigation", "Department", new { DepartmentId = Model.Id }); }
    <br />
    @{ Html.RenderAction("Navigation", "Category", new { DepartmentId = Model.Id }); }
    <br />
    @{ Html.RenderPartial("../Search/SearchForm"); }
    <br />
    @{ Html.RenderAction("Summary", "Cart"); }
        }


<h1>@Model.Name</h1>
<p class="lead">@Model.Description</p>
@{Html.RenderPartial("../Balloon/List", (object)ViewBag.PromotedBalloons);}
@(Html.Paging<Balloon, DepartmentController>((object)ViewBag.PromotedBalloons, x => y => y.Show(Model.Id, x)))
