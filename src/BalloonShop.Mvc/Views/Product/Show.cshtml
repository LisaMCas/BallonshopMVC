@model Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span9">

        <h1>@Model.Name</h1>

        <hr />

    </div>
</div>

<div class="row-fluid">

    <div class="span3">
        <a href="/Content/ProductImages/@Model.Image" class="fancybox"><img src="/Content/ProductImages/@Model.Image" class="product-image" /></a>
    </div>

    <div class="span6">
        <h2><strong>Price: @Model.Price.ToString("c")</strong></h2>
    </div>

    <div class="span6">
        <form method="post" action="@Url.Action("Add", "Cart")" class="form-inline">
            <div class="form-actions">
                <input type="hidden" name="balloonId" value="@Model.Id" />
                <label>Qty:</label>
                <input type="text" name="quantity" class="input-mini spinner" placeholder="1" />
                <input type="submit" value="Add to Cart" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div class="row-fluid">
    <div class="span9">

        <ul class="nav nav-tabs">
            <li class="active"><a href="#description" data-toggle="tab">Description</a></li>
            <li><a href="#reviews" data-toggle="tab">Reviews</a></li>
            <li><a href="#related-products" data-toggle="tab">Related products</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="description">
                @Model.Description
            </div>
            <div class="tab-pane" id="reviews">
                There are no reviews for this product.
            </div>
            <div class="tab-pane" id="related-products">
                <ul class="thumbnails row-fluid">
                @foreach (var recomendation in ViewBag.Recomendations) {
                    <li class="span2">
                        <div class="thumbnail">
                            <a href="@Url.Action("Show", "Balloon", new { id = recomendation.Id })" title="@recomendation.Name"><img src="/Content/ProductImages/@recomendation.Thumb" class="product-image" /></a>
                            <div class="caption"><a href="@Url.Action("Show", "Balloon", new { id = recomendation.Id })" title="@recomendation.Name" class="shortentext">@recomendation.Name</a><br />Price: @recomendation.Price.ToString("c")</div>
                        </div>
                    </li>    
                }
                </ul>
            </div>
        </div>

    </div>
</div>