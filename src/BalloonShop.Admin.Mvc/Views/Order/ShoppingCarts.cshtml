@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Count != null) {
<div class="alert alert-info">@string.Format("There is {0} shoppingcart(s).", ViewBag.Count)</div>
}

<form action="/order/shoppingcarts" method="post" class="form-horizontal">
    <fieldset>
        <legend>Shopping Cart Admin</legend>

        <div class="controls">
            <label class="control-label">How many days?</label>
            <div class="controls">
                <select name="days">
                    <option value="0">All shopping carts</option>
                    <option value="1">One</option>
                    <option value="10" selected="selected">Ten</option>
                    <option value="20">Twenty</option>
                    <option value="30">Thirty</option>
                    <option value="90">Ninety</option>
                </select>
            </div>
        </div>

        <div class="form-actions">
            <button name="action" value="count" class="btn btn-info">Count Old Shopping Carts</button>
            &nbsp;&nbsp;|&nbsp;&nbsp;
            <button name="action" value="delete" class="btn btn-danger">Delete Old Shopping Carts</button>
        </div>
    </fieldset>
</form>
