@model BalloonShop.Model.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Navigation {
    @{Html.RenderAction("Navigation", "Department", new { departmentId = Model.Department.Id });}
    <br />
    @{Html.RenderAction("Navigation", "Category", new { departmentId = Model.Department.Id, selectedCategoryId = Model.Id });}
    <br />
    @{Html.RenderPartial("../Search/SearchForm");}
    <br />
    @{Html.RenderAction("Summary", "Cart");}
}


<span class="CatalogTitle">@Model.Name</span>
<br/>
<span class="CatalogDescription">@Model.Description</span>
<br />
@(Html.Paging<Balloon, CategoryController>((object)ViewBag.Balloons, x => y => y.Show(Model.Id, x)))
@{Html.RenderPartial("../Balloon/List", (object)ViewBag.Balloons);}