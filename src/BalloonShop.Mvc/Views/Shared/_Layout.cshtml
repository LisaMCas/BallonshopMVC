@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>BalloonShop</title>
    <link href="/Content/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/BalloonShop.css" rel="Stylesheet" />
</head>
<body>
    <br />
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                @{Html.RenderAction("Navigation", "Account");}
				
                @{Html.RenderAction("Navigation", "Department", new { DepartmentId = ViewBag.DepartmentId }); }
                
                @{ if (ViewBag.ShowCategoryNavigation != null && ViewBag.ShowCategoryNavigation) { Html.RenderAction("Navigation", "Category", new { DepartmentId = ViewBag.DepartmentId, SelectedCategoryId = ViewBag.CategoryId }); } }

                @{ Html.RenderPartial("../Search/SearchForm"); }
                
                @{ if (ViewBag.HideCartNavigation == null || ViewBag.HideCartNavigation == false) { Html.RenderAction("Summary", "Cart"); } }
            </div>
            <div class="span8">
                <p>
                    <a href="@Url.Content("~/")">
                        <img src="/Content/Images/BalloonShopLogo.png" alt="BalloonShop">
                    </a>
                </p>
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="/Scripts/jquery-1.8.2.min.js"></script>
    <script src="/Scripts/jquery-ui-1.9.0.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/app.js"></script>
    @RenderSection("Script", false)
</body>
</html>

