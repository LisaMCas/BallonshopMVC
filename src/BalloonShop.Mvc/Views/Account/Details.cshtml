@model BalloonShop.Mvc.Models.AccountDetailsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Navigation {
    @{ Html.RenderAction("Navigation", "Department"); }
    <br />
    @{ Html.RenderPartial("../Search/SearchForm"); }
    <br />
    @{ Html.RenderAction("Summary", "Cart"); }
}

<h1>Edit Details</h1>

<div class="row-fluid">

    <form method="post" class="form-horizontal span5">
        <fieldset class="UserDetailsTable" style="position: relative;">
            <div class="UserDetailsTableHead">User Details</div>
            <legend class="hide"></legend>

            @Html.EditorForModel()

            @Html.ValidationSummary(false)

            <div class="form-actions" style="background: none; border: 0;">
                <input type="submit" value="Update" />
            </div>
        </fieldset>
    </form>

</div>
